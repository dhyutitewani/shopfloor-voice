{
    "version": 2,
    "rewrites": [
      {
        "source": "/api/auth/(.*)",
        "destination": "/src/routes/auth.routes.ts"
      },
      {
        "source": "/api/suggestions/(.*)",
        "destination": "/src/routes/routes.ts"
      },
      {
        "source": "/api/(.*)",
        "destination": "/src/server.ts"
      },
      {
        "source": "/(.*)",
        "destination": "/src/app.ts"
      }
    ],
    "build": {
      "env": {
        "NODE_ENV": "production"
      }
    }
  }  